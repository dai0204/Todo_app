%h1 Login Form

.row
  = form_for(:session, url: login_path) do |f|
    = f.label :email
    = f.email_field :email, class: 'form-control', :required => true
    = f.label :password
    = f.password_field :password, class: 'form-control', :required => true
    = f.submit "Login", class: 'btn'
  %p= link_to 'Sign Up', signup_path
